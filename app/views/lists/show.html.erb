<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.cntraveller.com/photos/611bed6f24f18e2bd3cbe7b0/16:9/w_2580,c_limit/the-phoenix-cinema-finchley-london-conde-nast-traveller-24feb15-pr.jpg);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p>There are <%= @list.movies.size %> movies on this list</p>
  </div>
</div>
<div>
  <% @list.bookmarks.each do |bookmark|%>
    <div class="mt-3 card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><strong><%= bookmark.movie.title %></strong></h2>
        <p><%= bookmark.movie.overview %> </p>
        <p><%= bookmark.movie.rating %> </p>
        <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-flat", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>

  <% end %>
</div>
<br>
<div style="margin: auto; width: 25%">
  <%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  <%= link_to "Back", lists_path(), class: "btn btn-flat" %>
</div>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
