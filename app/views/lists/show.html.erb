<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.cntraveller.com/photos/611bed6f24f18e2bd3cbe7b0/16:9/w_2580,c_limit/the-phoenix-cinema-finchley-london-conde-nast-traveller-24feb15-pr.jpg);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p>There are <%= @list.movies.size %> movies on this list</p>
  </div>
</div>
<div id="lists">
  <% @list.bookmarks.each do |bookmark|%>
    <div class="mt-3 card-product">
      <img src=<%= bookmark.movie.poster_url %> />
      <div class="card-product-infos">
        <h2><strong><%= bookmark.movie.title %></strong></h2>
        <p class="bookmark-spacing"><%= bookmark.movie.overview %> <i class="fa-solid fa-star"></i> <%= bookmark.movie.rating %></p>
        <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-ghost btn-delete", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <p><i class="fa-solid fa-quote-left"></i> <%=bookmark.comment %></p>
      </div>
    </div>

  <% end %>
</div>
<br>
<div class="nav-centered">
  <%= link_to "Back", lists_path(), class: "btn btn-flat" %>
  <%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
</div>
<div class="footer">
  <div class="footer-links">
